extends layout

block content
        section.feature-btn-group
            a#btn-create-game.btn-floating.btn-large.waves-effect.waves-light.z-depth-2.red(title="New game")
                i.mdi-content-add
            | #{' '}
            a#btn-join-ran-game.btn-floating.btn-large.waves-effect.waves-light.z-depth-2.green(title="Join random game")
                i.mdi-av-shuffle
        section#sec-loader
            div.preloader-wrapper.big.active
                div.spinner-layer.spinner-blue-only
                    div.circle-clipper.left
                        div.circle
                    div.gap-patch
                        div.circle
                    div.circle-clipper.right
                        div.circle

        section#sec-game-list.row
            div.caro-container

        //- Modal Structure
        div#modal1.modal
            div.modal-content
                h4 Create new game
                div.row
                    form#frm-new-game.col.s12(action="/new-game", method="POST")
                        div.row
                            div.input-field.col.s12
                                input#ip-name.validate(name="name", type="text", maxlength="30")
                                label(for="ip-name") Your name
                            div.input-field.col.s12
                                select(name="boardsize")
                                    option(value="small", selected) 15 x 15
                                    option(value="medium") 20 x 30
                                    option(value="large") 40 x 40
                                label Board size
            div.modal-footer
                a.modal-action.modal-close.waves-effect.waves-light.btn-flat(href="#") Discard
                a#btn-submit-frm.modal-action.waves-effect.waves-green.btn-flat(href="#") Create
        script(type="text/javascript", src="index.js")